@page
@model MyHostel_Admin.Pages.Admin_Page.Amenities.EditModel
@{
    Layout = "_LayoutAdmin";
}
<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-6">
            
            <h1 class="mb-0 fw-bold">Edit Genre</h1>
        </div>
        <div class="col-6">
            <div class="text-end upgrade-btn">
                <a asp-page="./Delete" asp-route-id="@Model.Amenity.Id" class="btn btn-danger text-white"
                   onclick="return confirm('Chỉ có thể xóa nếu thể loại chưa có phim nào. Chắc chắn xóa?')">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal form-material mx-2" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Amenity.Id" />
                        <div class="form-group">
                            <label asp-for="Amenity.AmenitiyName" class="col-md-12"></label>
                            <div class="col-md-12">
                                <input asp-for="Amenity.AmenitiyName" type="text"
                                       class="form-control form-control-line">
                            </div>
                            <span asp-validation-for="Amenity.AmenitiyName" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label class="col-md-12">Thể loại này đang có: @Model.Genre.Movies.Count Movies</label>
                        </div>*@
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="submit" value="Save" class="btn btn-success text-white" />
                            </div>
                        </div>
                        @if (ViewBag.Alert_success != null)
                        {
                            <span class="text-danger mb-3">@ViewBag.Alert_success</span>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>