@page
@model MyHostel_Admin.Pages.Admin_Page.Hostels.RoomsModel
@{
    Layout = "_LayoutAdmin";
}

<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-6">
            
            <h1 class="mb-0 fw-bold">Room Management</h1>
        </div>
        
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                Id
                            </th>
                            <th scope="col">
                                Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Room)
                        {
                            <tr>
                                <th scope="row">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @{
        var prevDisabled = !Model.Room.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.Room.HasNextPage ? "disabled" : "";
    }
    <div class="text-center mt-3">
        <a asp-page="./Rooms"
               asp-route-id="@Model.hostel.Id"
           asp-route-pageIndex="1"
           class="btn btn-primary @prevDisabled">
            First page
        </a>
            <a asp-page="./Rooms"
               asp-route-id="@Model.hostel.Id"
               asp-route-pageIndex="@(Model.Room.PageIndex - 1)"
           class="btn btn-primary @prevDisabled">
            Previous page
        </a>
            <a asp-page="./Rooms"
               asp-route-id="@Model.hostel.Id"
               asp-route-pageIndex="@(Model.Room.PageIndex + 1)"
           class="btn btn-primary @nextDisabled">
            Next page
        </a>
            <a asp-page="./Rooms"
               asp-route-id="@Model.hostel.Id"
               asp-route-pageIndex="@(Model.Room.TotalPages)"
           class="btn btn-primary @nextDisabled">
            Last page
        </a>
    </div>
    <div class="text-center mt-3">
            <p>Page: @Model.Room.PageIndex / @Model.Room.TotalPages</p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>